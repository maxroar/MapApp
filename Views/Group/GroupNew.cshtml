                    <span class="flash-err" asp-validation-for="GroupName"></span>
                    <input type="text" class="form-control" placeholder="Name..." asp-for="GroupName">
                </div>
                <div class="form-group">
                    <span class="flash-err" asp-validation-for="Password"></span>
                    <input type="password" class="form-control" placeholder="Password (optional)..." asp-for="Password">
                </div>
                <div class="form-group">
                <span class="flash-err" asp-validation-for="Description"></span>
                    <textarea class="form-control" placeholder="Description..." asp-for="Description"></textarea>
                </div>
                <input type="submit" class="btn btn-block btn-primary" value="Create">
            </form>
        </div>
