
@model mapapp.ViewModels.ReviewViewModel

<div class="show-location">

<div class="container">

<div class="row">

<div class="col-md-6">

    <h1>HELLO LOCATION PAGE, MAKE ME PRETTY LATER</h1>
    <h3>Add a Review</h3>
    <div class="well">
        <form asp-controller="Location" asp-action="AddReview" class="form">
            <input type="hidden" name="LocationId" value="@ViewBag.Location.LocationId">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-4">
                        <select asp-for="Rating" name="Rating" class="form-control">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <textarea class="form-control" placeholder="Write a short message..." asp-for="Message"></textarea>
            </div>

            <hr>

            <input type="submit" class="btn btn-block btn-primary" value="Create">
        </form>
    </div>

</div>

</div>

</div>

</div>