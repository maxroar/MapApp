
@model mapapp.Models.Location

<div class="container">

<h2 class="page-header">Add new Location for Group XYZ</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <form asp-controller="Location" asp-action="AddLocation" class="form" id="new-loc-form" method="POST">
                <div class="form-group">
                    <input type="text" asp-for="Name" class="form-control" placeholder="Location name...">
                </div>
                <hr>
                <div class="form-group">
                    <input type="text" asp-for="StreetAdr" class="form-control streetAdr-inp" placeholder="Street Address...">
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-5">
                            <input type="text" asp-for="City" class="form-control city-inp" placeholder="City...">
                        </div>
                        <div class="col-md-3">
                            <input type="text" asp-for="State" class="form-control state-inp" placeholder="State (IL)...">
                        </div>
                        <div class="col-md-4">
                            <input type="text" asp-for="Zip" class="form-control zip-inp" placeholder="Zip (60067)...">
                        </div>
                        <input type="hidden" asp-for="Lat" class="lat-coord" name="Lat" value="">
                        <input type="hidden" asp-for="Lng" class="lng-coord" name="Lng" value="">
                        <input type="hidden" asp-for="GooglePlacesId" class="googlePlacesId" name="GooglePlacesId" value="">
                    </div>
                </div>
                <hr>

                <div>Add a Review for this Location</div>

                <br>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-4">
                            <select asp-for="Rating" name="Rating" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Write a short message..." asp-for="Message"></textarea>
                </div>

                <hr>

                <input type="submit" class="btn btn-block btn-primary" value="Create">
            </form>
        </div>
    </div>
